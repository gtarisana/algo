ALGORITHM algo1
VAR
 x: CHAR;
 y:STRING;
 i:INTEGER;
 vowel:INTEGER;
 word:INTEGER;

BEGIN
i=0;
word=0;
vowel=0;
y='';

while x <> "."
read x;
i:= i+1;
y:= y+x;
IF ((x=' ') and i<0 ) THEN
    word := word+1;
    else
    if((x ='a')
    or(x ='e')
    or(x ='i')
    or(x ='o')
    or(x ='u')
    or(x = 'y')) THEN
    vowel := vowel+1;
END_IF
 write("sentence is: ",y);
 write("word is: ",word);
 write("vowel is: ",vowel);

END
